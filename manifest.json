{
  "manifest_version": 3,
  "name": "LinkedIn Job Insights",
  "version": "1.0.0",
  "description": "This extension shows insights and data that are not usually visible on LinkedIn job applications.",
  "permissions": [
    "webRequest"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["injector.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
